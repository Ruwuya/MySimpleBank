<Window x:Class="MySimpleBankGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySimpleBankGUI"
        mc:Ignorable="d"
        Title="Simple Bank" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="45" Margin="0,20,0,350">
            <Label Content="Please Enter your Account Number: " HorizontalAlignment="Left" Margin="10" />
            <TextBox x:Name="AccountNumberTextBox" Width="150" HorizontalAlignment="Left" Margin="10" BorderBrush="Black" BorderThickness="1.5" />
            <Button x:Name="CheckBalanceBtn" Content="Check Balance" Width="100" HorizontalAlignment="Left" Margin="10" Click="CheckBalanceBtn_Click" />
        </StackPanel>
    </Grid>
</Window>
